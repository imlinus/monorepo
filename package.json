{
  "private": true,
  "name": "@imlinus/workspaces",
  "scripts": {
    "test": "",
    "preinstall": "npx only-allow pnpm",
    "lint": "node ./lint-all.js",
    "lint:folders": "folder-lint",
    "remove:node-modules": "npx rimraf ./**/node_modules",
    "remove:dist": "npx rimraf ./**/dist",
    "serve:cheatsheets": "docsify serve ./webapps/cheat-sheets",
    "serve:docs": "docsify serve ./docs"
  },
  "devDependencies": {
    "@imlinus/git-hooks": "*",
    "@imlinus/folder-lint": "*"
  },
  "hooks": {
    "pre-commit": "npm run lint"
  }
}
